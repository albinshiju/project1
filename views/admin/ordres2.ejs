  <script>
    function confirmEdit(productId) {
      Swal.fire({

        title: 'Edit Product',
        text: 'Are you sure you want to Approve this product?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes',
        cancelButtonText: 'No',
      }).then((result) => {
        if (result.isConfirmed) {
          // If the user clicks "Yes," proceed to the edit page
          window.location.href = '/admin/approve/' + productId;
        }
      });
    }
    // Remove the following line: return false;
    function confirmDelete(productId) {
      Swal.fire({

        title: 'Edit Product',
        text: 'Are you sure you want to Deny this product?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes',
        cancelButtonText: 'No',
      }).then((result) => {
        if (result.isConfirmed) {
          // If the user clicks "Yes," proceed to the edit page
          window.location.href = '/admin/deleteproduct/' + productId;
        }
      });
    }
    function confirmRemove(productId) {
      Swal.fire({

        title: 'Edit Product',
        text: 'Are you sure you want to edit this product?',
        icon: 'warning',
        showCancelButton: true,
        confirmButtonText: 'Yes',
        cancelButtonText: 'No',
      }).then((result) => {
        if (result.isConfirmed) {
          // If the user clicks "Yes," proceed to the edit page
          window.location.href = '/admin/removeproduct/' + productId;
        }
      });
    }

  </script>
