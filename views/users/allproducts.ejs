                        <script>
                            function addToCart(productId) {
                                console.log(productId);
    // Make an AJAX request to add the product to the cart
    $.ajax({
         url: `/cart/addtocart/${productId}`,
    type: 'POST',
    contentType: 'application/json',
    data: JSON.stringify({
        productId: productId,
    }),
        success: function (data) {
            console.log(data, "data‚ù§Ô∏è");

            // Check if the server response indicates success
            if (data.success) {
                // Display a success message with SweetAlert2
                Swal.fire({
                    position: "center",
                    icon: "success",
                    title: "Product Added to Cart",
                    showConfirmButton: false,
                    timer: 1500
                });
            } else {
                // Display an error message with SweetAlert2
                Swal.fire({
                    position: "center",
                    icon: "error",
                    title: "Product Already Added",
                    showConfirmButton: false,
                    timer: 1500
                });
            }
        },
        error: function (error) {
            console.error('AJAX error:', error);

            // Display an error message with SweetAlert2
            Swal.fire({
                position: "center",
                icon: "error",
                title: "Failed to add product to Cart",
                showConfirmButton: false,
                timer: 1500
            });
        }
    });
}

                            
                            function likeProduct(productId) {
    $.ajax({
        url: `/addToWishlist/${productId}`,
        type: 'POST',
        contentType: 'application/json',
        data: JSON.stringify({ productId: productId }),
        success: function (data) {
            console.log(data,"data‚ù§Ô∏è");

            // Check if the server response indicates success
            if (data) {
                // Display a success message with a normal JavaScript alert
                Swal.fire({
                    position: "center",
                    icon: "success",
                    title: "Product Added to wishlist",
                    showConfirmButton: false,
                    timer: 1500
                });
            } else {
                // Display an error message with a normal JavaScript alert
                alert('Failed to add product to wishlist!');
            }
        },
        error: function (error) {
            console.error('AJAX error:', error);
            // Display an error message with a normal JavaScript alert
            alert('Failed to add product to wishlist!');
        }
    });
}


                        </script>